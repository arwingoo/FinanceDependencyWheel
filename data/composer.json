{
    "config": {
        "platform": {
            "php": "7.1"
        },
        "gitlab-domains": [
            "gitlab.loc"
        ]
    },
    "require": {
        "slim/slim": "4.3.0",
        "slim/psr7": "0.6.*",
        "php-di/slim-bridge": "^3.1",
        "justinrainbow/json-schema": "~1.3",
        "jms/serializer": "1.4.2",
        "ext-json": "*",
        "ext-fileinfo": "*",
        "ext-curl": "*",
        "xsolla/login-sdk-php": "^1.0",
        "symfony/ldap": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "PaymentCore\\" : "src",
            "PaymentCore\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "external-forks/phpunit": "dev-PAYMENTS-19362-doctrine-dbal-upgrade"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "sdk-login": {
            "type": "vcs",
            "url": "git@gitlab.loc:sdk-login/login-sdk-php.git"
        },
        "phpunit": {
            "type": "vcs",
            "url": "git@gitlab.loc:external-forks/phpunit.git"
        },
        "phpunit-mock-objects": {
            "type": "vcs",
            "url": "git@gitlab.loc:external-forks/phpunit-mock-objects.git"
        }
    }
}

